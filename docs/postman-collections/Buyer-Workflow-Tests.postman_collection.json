            },
            "url": {
              "raw": "{{base_url}}/api/reviews",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Notifications",
      "item": [
        {
          "name": "Get Buyer Notifications",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "pm.test('Response contains notifications', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data).to.have.property('items');",
                  "    pm.expect(response.data.items).to.be.an('array');",
