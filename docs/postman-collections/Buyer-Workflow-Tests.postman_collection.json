      "item": [
        {
          "name": "Create Seller Review",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.expect(pm.response.code).to.equal(201);",
                  "});",
                  "",
                  "pm.test('Review created successfully', function () {",
                  "    const response = pm.response.json();",
